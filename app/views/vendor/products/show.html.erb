<header id="page-title" class="jumbotron background">
  <div id="title-image" class="bg">
    <img src="http://lorempixel.com/1000/570/sports/4/" alt="">
  </div>
  <div class="container">
    <div class="horizontal-center vertical-center">
      <h1 class="article-title"><%= @product.name %></h1>
      <h2 class="article-subtitle"></h2>
    <p>
   <%= image_tag @product.image.variant(resize: "600x500") %>
 </p>
 </p>
    </div>
  </div>
</header>

<div class="container foreground">
  <div class="row">
    <div class="col-lg-12">
      <div class="bs-component">
        <article>
           <%= raw @product.description %>
          <div class="horizontal-center">
            <div class="author">
              <a href="#">
                <img src="" class="author-image"><span class="author-name">By : <%= @product.user.email %></span>
              </a>
            </div>
          </div>
        </article>
        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_vendor_product_path(@product) %> |
          <%= link_to 'Back', vendor_products_path %>
        <% else %>
          <%= link_to 'Back', "/visitors/blogs" %>
        <% end %> 
      </div>
    </div>
  </div>
</div>
