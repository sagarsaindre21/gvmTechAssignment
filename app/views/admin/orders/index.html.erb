<%= javascript_pack_tag 'cart-operation' %>

<div class="box record_detail_box">
  <div class="box-header">
    <div class="listHeaderContainer center" >
      <h3 class="box-title">Listing Order</h3>
    </div>
  </div>
  <div class="box-body no-padding">
    <div class="row">
      <div class="col-md-6 margin listing-form-control">
        <div class="form-group">
          <div class="field">
          </div>
        </div>
      </div>
    </div>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Total Amount</th>
          <th colspan="3" class="text-center">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.user.email %></td>
            <td><%= order.amount %></td>
            <td><%= link_to 'Show', admin_order_path(order) %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
